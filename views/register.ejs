<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
      body {
        height: 100vh;
        width: 100vw;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        overflow: hidden;
        background: linear-gradient(to right, #6366f1, #a855f7, #ec4899);
      }
    </style>
  </head>
  <body
    class="h-screen w-screen flex items-center justify-center bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white overflow-hidden"
  >
    <!-- Decorative Icons -->
    <div class="absolute top-20 left-10 text-7xl text-white/30 animate-bounce">☁️</div>
    <div class="absolute bottom-32 right-16 text-7xl text-yellow-300/30 animate-pulse">📂</div>
    <div class="absolute top-40 right-1/8 text-7xl text-green-300/30 animate-bounce">⬆️</div>
    <div class="absolute bottom-20 left-1/3 text-7xl text-blue-300/30 animate-pulse">📄</div>

    <!-- Back Button -->
    <a href="http://localhost:5173/"
      class="fixed top-6 left-6 inline-block px-6 py-3 text-lg font-bold text-white 
             bg-pink-300 rounded-3xl shadow-lg 
             transform transition duration-200 hover:scale-110 hover:bg-pink-400">
      <i class="fa-solid fa-arrow-left"></i> Back
    </a>

    <!-- Register Form -->
    <form action="/user/register" method="post" 
          class="bg-white/20 backdrop-blur-lg shadow-lg rounded-2xl p-8 w-[400px] relative z-10">

      <!-- Title -->
      <h2 class="text-3xl font-bold mb-6 text-center text-yellow-300">Register ✨</h2>

      <!-- Full Name -->
      <div class="mb-4">
        <label for="fullName" class="block mb-2 text-sm font-medium text-white-700">Full Name</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
            <i class="fa-solid fa-user"></i>
          </span>
          <input 
            type="text" 
            id="usernaame" 
            name="username"
            placeholder="John Doe" 
            required
            class="pl-10 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                   focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
          />
        </div>
      </div>

      <!-- Email -->
      <div class="mb-4">
        <label for="email" class="block mb-2 text-sm font-medium text-white-700">Email</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
            <i class="fa-solid fa-envelope"></i>
          </span>
          <input 
            type="email" 
            id="email" 
            name="email"
            placeholder="you@example.com" 
            required
            class="pl-10 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                   focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
          />
        </div>
      </div>

      <!-- Password -->
      <div class="mb-6">
        <label for="password" class="block mb-2 text-sm font-medium text-white-700">Password</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
            <i class="fa-solid fa-lock"></i>
          </span>
          <input 
            type="password" 
            id="password" 
            name="password"
            placeholder="•••••••••" 
            required
            class="pl-10 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                   focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
          />
        </div>
      </div>

      <!-- Submit -->
      <button 
        type="submit" 
        class="w-full py-3 bg-yellow-300 text-indigo-700 font-semibold rounded-xl shadow-md hover:scale-105 transition">
        Register
      </button>

      <!-- Extra Link -->
      <p class="text-sm text-center mt-4 text-white-600">
        Already have an account? 
        <a href="/user/login" class="text-yellow-300 hover:underline">Login</a>
      </p>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>
